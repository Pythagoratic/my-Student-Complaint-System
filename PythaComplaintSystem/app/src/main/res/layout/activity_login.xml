<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@mipmap/black_green_background"
tools:context=".LoginActivity"
android:padding="20dp"
    >


<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/linear_layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:text="Student's Complaint \nSystem (SCS)  "
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/text_input_layout_form_style"
        app:boxStrokeColor="@color/white"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:hint="Email or Reg Number"
            android:text="2018514082"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:textInputLayoutFocusedRectEnabled="true"

            />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout style="@style/text_input_layout_form_style">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="Password"
            android:textColor="@color/white" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_forgot_password"
        style="@style/style_textview"
        android:layout_gravity="right"
        android:layout_marginBottom="40dp"
        android:text="Forgot Password?"
        android:textColor="@android:color/holo_blue_bright"

        />

    <com.google.android.material.button.MaterialButton
        style="@style/style_my_button"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/my_green"
        android:text="Login"
        tools:ignore="SpeakableTextPresentCheck" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_new_user"
            style="@style/style_textview"
            android:layout_marginRight="30dp"
            android:text="New User? " />

        <TextView
            android:id="@+id/txt_create_account"
            style="@style/style_textview"
            android:text="New User? "
            android:textColor="@android:color/holo_blue_light" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>




